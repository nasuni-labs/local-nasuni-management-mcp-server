# NMC MCP Server Configuration Template
# Copy this file to .env and fill in your actual values

# ===== REQUIRED CONFIGURATION =====

# NMC API Base URL (replace with your actual NMC server)
API_BASE_URL= "https://your-nmc-server.com"
# NMC Login Credentails (Ensure the user has adequate permissions)
NMC_USERNAME= "usename"
NMC_PASSWORD= "password"

# API Authentication Token (choose ONE method below)
# Method 1: Direct token (not recommended for production)
API_TOKEN=your_api_token_here

# Method 2: Token file path (recommended for production)
API_TOKEN_FILE=/secure/path/to/your/token.txt

# ===== OPTIONAL CONFIGURATION =====

# SSL Verification (set to true for production)
VERIFY_SSL=false

# API Request Timeout (seconds)
API_TIMEOUT=30.0

# ===== DEVELOPMENT/DEBUGGING =====
# Uncomment for development

# DEBUG=true
# LOG_LEVEL=DEBUG